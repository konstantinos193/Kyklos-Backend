{
  "watch": [
    "routes",
    "models",
    "config",
    "middleware",
    "utils",
    "server.js",
    "*.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/**",
    ".git/**",
    "*.test.js",
    "test-*.js",
    "*.log",
    "public/**",
    "coverage/**"
  ],
  "delay": 1000,
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node server.js"
}

